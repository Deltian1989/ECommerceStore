@using ECommerceStore.Web.Components.Pages.Home.ProductSliders
@using ECommerceStore.Web.Core
@page "/"
@inject IStringLocalizer<Home> localizer

<_SliderProductsSlider ProductSliderCategory="ProductSliderCategory.FeaturedProducts"
    LoadingProductsCaption="@localizer["ProductsLoadingStatusLoadingProducts"]"
                SliderTitle="@localizer["FeaturedProductSliderTitle"]"
                         ProductsAvailabilityStatus="@localizer["ProductsLoadingStatusNoProductsAvailable"]">
            </_SliderProductsSlider>

<br />

<_SliderProductsSlider ProductSliderCategory="ProductSliderCategory.DiscountedProducts"
    LoadingProductsCaption="@localizer["ProductsLoadingStatusLoadingProducts"]"
                           SliderTitle="@localizer["DiscountedProductSliderTitle"]"
                           ProductsAvailabilityStatus="@localizer["ProductsLoadingStatusNoProductsAvailable"]">
</_SliderProductsSlider>
